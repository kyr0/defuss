{
  "name": "defuss-astro",
  "version": "1.4.3",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "description": "Defuss Integration for Astro with WASM-based built-in image conversion support.",
  "keywords": ["jsx", "render", "ssr", "isomorphic", "astro"],
  "repository": {
    "url": "git+https://github.com/kyr0/defuss.git",
    "type": "git"
  },
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./node_modules/.pnpm",
    "prebuild": "pnpm run clean",
    "build": "pkgroll",
    "postbuild": "tsx ./scripts/finalize-build.ts"
  },
  "author": "Aron Homberg <info@aron-homberg.de>",
  "sideEffects": false,
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./client.js": {
      "require": {
        "types": "./dist/client.d.cts",
        "default": "./dist/client.cjs"
      },
      "import": {
        "types": "./dist/client.d.mts",
        "default": "./dist/client.mjs"
      }
    },
    "./server.js": {
      "require": {
        "types": "./dist/server.d.cts",
        "default": "./dist/server.cjs"
      },
      "import": {
        "types": "./dist/server.d.mts",
        "default": "./dist/server.mjs"
      }
    },
    "./image-endpoint.js": {
      "types": "./dist/endpoint/image-endpoint.d.mts",
      "default": "./dist/endpoint/image-endpoint.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": ["dist"],
  "devDependencies": {
    "pkgroll": "^2.5.1",
    "typescript": "^5.6.3",
    "tsx": "^4.19.2"
  },
  "engines": {
    "node": "^18.17.1 || ^20.3.0 || >=21.0.0"
  },
  "dependencies": {
    "defuss": "workspace:*",
    "defuss-vite": "workspace:*",
    "astro": "^5.8.1",
    "vite": "^6.3.5",
    "fast-glob": "^3.3.2",
    "svgo": "^3.3.2",
    "lightningimg": "^1.0.3",
    "purgecss": "^7.0.2",
    "file-type": "^19.6.0"
  }
}
