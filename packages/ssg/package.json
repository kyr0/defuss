{
  "name": "defuss-ssg",
  "version": "0.0.3",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "defuss-ssg": "dist/cli.mjs"
  },
  "license": "MIT",
  "description": "A simple static site generator (SSG) built with defuss.",
  "keywords": ["ssg", "static", "site", "generator", "defuss"],
  "repository": {
    "url": "git+https://github.com/kyr0/defuss.git",
    "type": "git"
  },
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./node_modules/.pnpm",
    "pretest": "pnpm run build",
    "prebuild": "pnpm run clean",
    "build": "pkgroll",
    "cli-build": "node ./dist/cli.mjs build",
    "cli-serve": "node ./dist/cli.mjs serve",
    "test": "vitest --run  --coverage"
  },
  "author": "Aron Homberg <info@aron-homberg.de>",
  "sideEffects": false,
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./components": {
      "require": {
        "types": "./dist/components/index.d.cts",
        "default": "./dist/components/index.cjs"
      },
      "import": {
        "types": "./dist/components/index.d.mts",
        "default": "./dist/components/index.mjs"
      }
    },
    "./runtime": {
      "require": {
        "types": "./dist/runtime.d.cts",
        "default": "./dist/runtime.cjs"
      },
      "import": {
        "types": "./dist/runtime.d.mts",
        "default": "./dist/runtime.mjs"
      }
    },
    "./plugins": {
      "require": {
        "types": "./dist/plugins/index.d.cts",
        "default": "./dist/plugins/index.cjs"
      },
      "import": {
        "types": "./dist/plugins/index.d.mts",
        "default": "./dist/plugins/index.mjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": ["dist"],
  "engines": {
    "node": "^18.17.1 || ^20.3.0 || >=21.0.0"
  },
  "dependencies": {
    "express": "^5.1.0",
    "serve-static": "^2.2.0",
    "chokidar": "^4.0.3",
    "@mdx-js/esbuild": "^3.1.1",
    "esbuild": "^0.25.9",
    "rehype-mdx-title": "^3.2.0",
    "rehype-katex": "^7.0.1",
    "rehype-stringify": "^10.0.1",
    "remark-rehype": "^11.1.2",
    "remark-math": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^5.2.0",
    "fast-glob": "^3.3.3",
    "@types/express": "^5.0.3",
    "@types/serve-static": "^1.15.8",
    "defuss": "^2.1.1",
    "defuss-runtime": "^1.2.0"
  },
  "devDependencies": {
    "pkgroll": "^2.5.1",
    "typescript": "^5.6.3",
    "happy-dom": "^15.11.7"
  }
}
