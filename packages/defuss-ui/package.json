{
  "name": "defuss-ui",
  "type": "module",
  "version": "0.0.8",
  "description": "A modern Shadcn-like component library for defuss that build on Tailwind and Franken UI.",
  "repository": {
    "url": "git+https://github.com/kyr0/defuss.git",
    "type": "git"
  },
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./node_modules/.pnpm",
    "pretest": "pnpm run build",
    "prebuild": "pnpm run clean",
    "build": "pkgroll --sourcemap"
  },
  "author": "Aron Homberg <info@aron-homberg.de>",
  "sideEffects": false,
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": ["dist"],
  "keywords": [
    "components",
    "defuss",
    "ui",
    "tailwind",
    "franken-ui",
    "shadcn"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.20",
    "@biomejs/biome": "1.9.3",
    "typescript": "^5.6.3",
    "vitest": "^3.1.3",
    "pkgroll": "^2.5.1",
    "tsx": "^4.19.2"
  },
  "engines": {
    "node": "^18.17.1 || ^20.3.0 || >=21.0.0"
  },
  "dependencies": {
    "defuss": "^2.1.1"
  }
}
