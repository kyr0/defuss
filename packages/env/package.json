{
  "name": "defuss-env",
  "version": "1.0.2",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "defuss-env": "dist/cli.mjs"
  },
  "description": "Safe and convenient environment variable handling.",
  "keywords": ["defuss", "env", "environment", "variables", "configuration"],
  "repository": {
    "url": "git+https://github.com/kyr0/defuss.git",
    "type": "git"
  },
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./node_modules/.pnpm",
    "pretest": "pnpm run build",
    "prebuild": "pnpm run clean",
    "build": "pkgroll",
    "cli": "node ./dist/cli.mjs",
    "test": "vitest --run  --coverage"
  },
  "devDependencies": {
    "@types/node": "^24.3.2",
    "pkgroll": "^2.5.1",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.1.3"
  },
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": ["dist"],
  "engines": {
    "node": "^18.17.1 || ^20.3.0 || >=21.0.0"
  },
  "license": "MIT",
  "author": "Aron Homberg <info@aron-homberg.de>",
  "sideEffects": false
}
