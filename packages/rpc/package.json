{
  "name": "defuss-rpc",
  "version": "1.1.3",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "description": "Remote Procedure Call (RPC) for defuss.",
  "keywords": [
    "rpc",
    "defuss",
    "astro"
  ],
  "repository": {
    "url": "git+https://github.com/kyr0/defuss.git",
    "type": "git"
  },
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./node_modules/.bun",
    "prebuild": "bun run clean",
    "build": "pkgroll",
    "test": "vitest run --coverage",
    "dev:server": "tsx src/example-server.ts"
  },
  "author": "Aron Homberg <info@aron-homberg.de>",
  "sideEffects": false,
  "exports": {
    "./client.js": {
      "require": {
        "types": "./dist/client.d.cts",
        "default": "./dist/client.cjs"
      },
      "import": {
        "types": "./dist/client.d.mts",
        "default": "./dist/client.mjs"
      }
    },
    "./server.js": {
      "require": {
        "types": "./dist/server.d.cts",
        "default": "./dist/server.cjs"
      },
      "import": {
        "types": "./dist/server.d.mts",
        "default": "./dist/server.mjs"
      }
    }
  },
  "types": "./dist/types.d.cts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@vitest/coverage-v8": "^4.0.18",
    "express": "^5.2.1",
    "happy-dom": "^20.6.1",
    "pkgroll": "^2.25.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": "^18.17.1 || ^20.3.0 || >=21.0.0"
  },
  "dependencies": {
    "defuss-dson": "^1.1.1"
  },
  "overrides": {
    "happy-dom": "^20.6.1"
  },
  "peerDependencies": {
    "astro": "*"
  }
}
