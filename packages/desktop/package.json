{
  "name": "defuss-desktop",
  "version": "0.0.1",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "description": "A window manager to create desktop environments in the browser.",
  "keywords": ["window", "manager", "desktop", "environments", "browser"],
  "repository": {
    "url": "git+https://github.com/kyr0/defuss.git",
    "type": "git"
  },
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./node_modules/.pnpm",
    "pretest": "pnpm run build",
    "prebuild": "pnpm run clean",
    "build": "pkgroll",
    "postbuild": "npm run copy-scss",
    "copy-scss": "mkdir -p dist/scss dist/themes && cp index.scss dist/ && cp xp.scss dist/ && cp -r scss/* dist/scss/ && cp -r themes/* dist/themes/",
    "test": "vitest --run  --coverage"
  },
  "author": "Aron Homberg <info@aron-homberg.de>",
  "sideEffects": false,
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./xp": "./xp.scss",
    "./index": "./index.scss"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": ["dist"],
  "engines": {
    "node": "^18.17.1 || ^20.3.0 || >=21.0.0"
  },
  "dependencies": {
    "defuss": "workspace:*",
    "defuss-transval": "workspace:*"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.1.4",
    "lightningcss": "^1.30.1",
    "pkgroll": "^2.12.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}
