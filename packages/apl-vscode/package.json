{
  "name": "apl",
  "displayName": "APL - Agentic Prompting Language",
  "description": "VS Code extension for APL - Syntax highlighting & more.",
  "version": "0.0.1",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/defuss/defuss"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": ["Programming Languages"],
  "contributes": {
    "languages": [
      {
        "id": "apl",
        "aliases": ["Agentic Prompting Language", "apl"],
        "extensions": [".apl"],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./icon.png",
          "light": "./icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "apl",
        "scopeName": "text.apl",
        "path": "./syntaxes/apl.tmLanguage.json"
      }
    ]
  }
}
