{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "jsxImportSource": "..",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "../src/*"
            ]
        }
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx"
    ]
}