{
  "name": "defuss-shadcn",
  "type": "module",
  "version": "0.3.0",
  "description": "A modern Shadcn-like component library for defuss that build on Tailwind CSS 4 and Basecoat UI.",
  "repository": {
    "url": "git+https://github.com/kyr0/defuss.git",
    "type": "git"
  },
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./node_modules/.pnpm",
    "pretest": "pnpm run build",
    "prebuild": "pnpm run clean",
    "build": "pkgroll --sourcemap"
  },
  "author": "Aron Homberg <info@aron-homberg.de>",
  "sideEffects": false,
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": [
    "dist"
  ],
  "keywords": [
    "components",
    "defuss",
    "ui",
    "tailwind-4",
    "basecoatui",
    "shadcn"
  ],
  "license": "MIT",
  "dependencies": {
    "defuss": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "pkgroll": "^2.21.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17",
    "tailwind-merge": "^3.4.0",
    "clsx": "^2.1.1",
    "class-variance-authority": "^0.7.1"
  },
  "engines": {
    "node": "^18.17.1 || ^20.3.0 || >=21.0.0"
  }
}
