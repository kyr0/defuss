{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "packages/**",
    "examples/**"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build"]
    },
    "clean": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^start"]
    }
  }
}