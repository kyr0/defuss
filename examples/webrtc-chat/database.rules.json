{
  "rules": {
    "rooms": {
      ".read": "auth != null",
      "$room": {
        "members": {
          ".read": "auth != null",
          "$member": {
            ".write": "auth != null && ($member === auth.uid || $member.beginsWith(auth.uid + '_') || (data.exists() && data.child('lastSeen').val() < (now - 300000) && !newData.exists()))"
          }
        },
        "signals": {
          "$recipient": {
            ".read": "auth != null",
            ".write": "auth != null"
          }
        }
      }
    }
  }
}