---
import "squeezy"; // Import the Squeezy CSS framework
import "./Layout.css";

interface Props {
	title: string;
}
---

<!doctype html>
<html class="dark" lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/webp" href="/favicon.webp" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta
			name="keywords"
			content="Astro, TypeScript, defuss, web development, modern web, frontend"
		/>
		<meta
			name="description"
			content="Explore the integration of Astro, TypeScript, and defuss for modern web development."
		/>
		<title>{Astro.props.title}</title>
	</head>

	<body class="vbox justify-center">
		<div class="hbox text-center" style="max-width: 1280px">
			<slot />
		</div>
	</body>
</html>
